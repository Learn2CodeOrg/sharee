<%= render partial: 'campaigns/partials/header', locals: { step: 2, campaign: campaign } %>

<div class="controls">
  <%= render partial: 'campaigns/partials/back' %>
</div>

<div class="container">
  <%= form_for billing_info, remote: true do |f| %>
  <div class="padding-top col-6">
    <div class="field">
      <%= f.label :billing_contact %><br />
      <%= f.text_field :billing_contact %>
    </div>
    <div class="field">
      <%= f.label :address_line_1 %><br />
      <%= f.text_field :address_line_1 %>
    </div>
    <div class="field">
      <%= f.label :zip_code %><br />
      <%= f.text_field :zip_code %>
    </div>
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :company_identification_number %><br />
      <%= f.text_field :company_identification_number %>
    </div>
    <div class="field">
      <%= f.label :tax_identification_number %><br />
      <%= f.text_field :tax_identification_number %>
    </div>
    <div class="field">
      <%= f.label :vat_identification_number %><br />
      <%= f.text_field :vat_identification_number %>
    </div>
  </div>
  <div class="col-12 centered">
    <%= f.submit t('buttons.save'),
        class: "btn-big btn-primary-green btn-submit",
        id: "save-button",
        data: {
          save: t('buttons.save'),
          saved: t('buttons.saved') } %>
  </div>
  <% end %>
</div>
