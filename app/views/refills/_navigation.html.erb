<% merchant_active = current_page?(id: 'merchant-info') %>

<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <%= link_to root_path, class: 'logo' do %>
      <%= image_tag asset_path 'logo.svg' %>
    <% end %>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu">
        <li class="nav-link <%= 'active' if merchant_active %>">
          <%= link_to 'Informácie pre obchodníkov', page_path('merchant-info') %>
        </li>
        <div class="on-right">
          <li class="nav-link"><%= link_to "Prihlásenie", new_user_session_path, class: "text-link js-nav-link" %></li>
          <% if merchant_active %>
            <li class="nav-link">
              <label for="modal-1">
                <div class="btn btn-medium btn-primary-blue js-nav-link">Registrácia</div>
              </label>
            </li>
          <% end %>
        </div>
      </ul>
    </nav>
  </div>
</header>
<%= render 'refills/modal' %>
